.footer-wrap
  background: #fafafa;
  display: -webkit-box;
  display: box;
  border: 1px solid #eee;
  border-left: 0;
  border-right: 0;
  position fixed
  bottom 0
  width 100%
  height 3rem
  line-height 3rem
  font-size 0.8rem
  color rgba(0,0,0,.3)

.footer-wrap
  li
    -webkit-box-flex: 1;
    text-align center
    span
      display: block;
      height: 41px;
      color: #888;
      font-size: 10px;
      padding-top: .4rem;
      i
        padding-top .4rem
        height 1rem
        line-height 1rem
        display: block;
        overflow: hidden;
        margin: 0 auto;
        font-size 1.2rem

.footer-txt
  margin-top .125rem
  height .8rem
  line-height .8rem